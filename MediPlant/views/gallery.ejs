<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge"> -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MediPlant</title>
    <link rel="stylesheet" href="css\menu.css">
    <link rel="stylesheet" href="css\gallery.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.5.2/css/all.css">
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
</head>
<body>
    <div class="menu">
        <img src="img\logo.png" alt="MediPlants">
       <div class="menu_items">
       	 <span><a href="/">Home</a></span>
         <span><a href="upload">Upload</a></span>
         <span><a href="gallery">Gallery</a></span>
         <span><a href="contactus">Contact Us</a></span>
         <!-- <span><a href="login">Login</a></span>|
         <span><a href="signup">Signup</a></span> -->
       </div>
    </div>

    <h1 style="text-align: center;">Plants Gallery</h1><hr><br>
    <div class="gallery">
        <% images.forEach(image => {  %>
            
                <div class="image">
                    <a href="/plant_profile?id=<%= image._id %>" >
                    <img src="./images/<%= image.image %>" alt="<%= image.image%>">
                    <hr>
                    <p><%= image.english_name %></p>
                    </a>
                    <div class="options">
                        <a href="/edit_details?id=<%= image._id%>" class="edit-button"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="/delete_details?id=<%= image._id%>" class="delete-button"><i class="fa-solid fa-trash"></i></a>
                    </div>
               </div>
               
            
            
        <% }); %>
    </div>
    <center>
    <div class="pagination">
        <% if (currentPage > 1) { %>
            <a href="/gallery?page=<%= currentPage - 1 %>" >&laquo; Prev</a>
        <% } %>
        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/gallery?page=<%= i %>" class="<%=  i == currentPage ? "active" : "" %>"><%= i %></a>
        <% } %>
        <% if (currentPage < totalPages) { %>
            <a href="/gallery?page=<%= currentPage + 1 %>" >Next &raquo;</a>
        <% } %>
    </div>
    </center>






<center class="social">
            <h4>FOLLOW US</h4>
