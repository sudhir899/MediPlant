    <h2>Upload Plant Details</h2> 
  <div class="container">
    <form action="/upload" method="post" enctype="multipart/form-data">
    <div class="col-sm-6">
            <div class="form-group">
                <label for="name1">Botanical Name:</label>
                <input type="text" id="name1" name="name1"  required >
            </div>
            <div class="form-group">
                <label for="name3">Hindi Name:</label>
                <input type="text" id="name3" name="name3" required >
            </div>
            
            <div class="form-group">
                <label for="part">Useful Part:<br>
                    <span> You can input multiple Parts using comma(,) seperator </span></label>
                <input type="text" id="part" name="part"  required>
            </div>
            
            <div class="form-group">
                <label for="image">Upload Image:</label>
                <input type="file" id="image" name="image" accept="image/*"  required>
            </div>
            <div class="form-group">
                <label for="msg">Description:</label>
                <textarea class="form-control" name="msg" ></textarea>
            </div>
            <div class="col-sm-4">
                <button type="submit">Submit</button>
            </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <label for="name2">English Name:</label>
            <input type="text" id="name2" name="name2" required >
        </div>
        <div class="form-group">
            <label for="disease">Disease It Cures:<br>
                <span> You can input multiple disease using comma(,) seperator </span></label>
            <input type="text" id="disease" name="disease" required >
        </div>
        <div class="form-group">
            <label for="place">Places:<br>
                <span> You can input multiple Places using comma(,) seperator </span></label>
            <input type="text" id="place" name="place" required>
        </div>
        <img  id="image-preview" class="preview" src="#" alt="No Image Selected ">
    </div>
</form>
</div>







    
